<Page
    x:Class="UI.Views.Play"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:UI.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:PlayVM></vm:PlayVM>
    </Page.DataContext>
    
    <RelativePanel Background="red">
        <Canvas x:ConnectionId='2' Background="Black" RelativePanel.AlignBottomWithPanel="True" 
                RelativePanel.AlignLeftWithPanel="True" 
                RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignTopWithPanel="True" Width="1500" Height="800"                       >

            <Image x:ConnectionId='3' x:Name="imagenFantasma" Source="/Assets/Image/Easy_Mode.png" Width="50" Height="50" Visibility="{Binding VisibilidadUsuario, UpdateSourceTrigger=PropertyChanged}"
                   Canvas.Left="{Binding X,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="{Binding Y,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Image Source="/Assets/Image/Hard_Mode.png" Width="50" Height="50" 
                   Canvas.Left="{Binding Enemigo1.X, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="{Binding Enemigo1.Y, UpdateSourceTrigger=PropertyChanged}"/>
            <Image Source="/Assets/Image/Medium_Mode.png" Width="50" Height="50" 
                   Canvas.Left="{Binding Enemigo2.X, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="{Binding Enemigo2.Y, UpdateSourceTrigger=PropertyChanged}"/>

            <Image Source="/Assets/Image/Medium_Mode.png" Width="50" Height="50" 
                   Canvas.Left="{Binding Enemigo3.X, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="{Binding Enemigo3.Y, UpdateSourceTrigger=PropertyChanged}"/>


            <Image x:ConnectionId='4' x:Name="bloqueRandom" Source="/Assets/Image/Corner_Wall_1.png" Width="50" Height="50"
                   Canvas.Left="{Binding wall.xAxis, Mode=TwoWay}" Canvas.Top="{Binding wall.yAxis, Mode=TwoWay}"/>
            <Image x:ConnectionId='5' x:Name="bloqueRandom2" Source="/Assets/Image/Corner_Wall_1.png" Width="50" Height="50"
                   Canvas.Left="{Binding wall2.xAxis, Mode=TwoWay}" Canvas.Top="{Binding wall2.yAxis, Mode=TwoWay}"/>
            <Image x:ConnectionId='6' x:Name="bloqueRandom3" Source="/Assets/Image/Corner_Wall_1.png" Width="50" Height="50"
                   Canvas.Left="{Binding wall3.xAxis, Mode=TwoWay}" Canvas.Top="{Binding wall3.yAxis, Mode=TwoWay}"/>
            <Image x:ConnectionId='7' x:Name="bloqueRandom4" Source="/Assets/Image/Corner_Wall_1.png" Width="50" Height="50"
                   Canvas.Left="{Binding wall4.xAxis, Mode=TwoWay}" Canvas.Top="{Binding wall4.yAxis, Mode=TwoWay}"/>
            <Image x:ConnectionId='8' x:Name="bloqueRandom5" Source="/Assets/Image/Corner_Wall_1.png" Width="50" Height="50"
                   Canvas.Left="{Binding wall5.xAxis, Mode=TwoWay}" Canvas.Top="{Binding wall5.yAxis, Mode=TwoWay}"/>
            <Image x:ConnectionId='9' x:Name="bloqueRandom6" Source="/Assets/Image/Corner_Wall_1.png" Width="50" Height="50"
                   Canvas.Left="{Binding wall6.xAxis, Mode=TwoWay}" Canvas.Top="{Binding wall6.yAxis, Mode=TwoWay}"/>
            <Image x:ConnectionId='10' x:Name="bloqueRandom7" Source="/Assets/Image/Corner_Wall_1.png" Width="50" Height="50"
                   Canvas.Left="{Binding wall7.xAxis, Mode=TwoWay}" Canvas.Top="{Binding wall7.yAxis, Mode=TwoWay}"/>
            <Image x:ConnectionId='11' x:Name="bloqueRandom8" Source="/Assets/Image/Corner_Wall_1.png" Width="50" Height="50"
                   Canvas.Left="{Binding wall8.xAxis, Mode=TwoWay}" Canvas.Top="{Binding wall8.yAxis, Mode=TwoWay}"/>

        </Canvas>
    </RelativePanel>
</Page>

